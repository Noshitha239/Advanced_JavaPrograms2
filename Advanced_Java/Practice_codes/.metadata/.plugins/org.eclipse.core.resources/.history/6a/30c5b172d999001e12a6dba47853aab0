import java.util.Scanner;

public class Fibanacci {

	public static int main(String[] args) {
		// TODO Auto-generated method stub
        Scanner sc=new Scanner(System.in);
        int n=sc.nextInt();
        for(int i=0;i<n;i++) {
        	if(n<=1) {
        		return n;
        	}
        	else {
        		System.out.println((n-1)+(n-2));
        	}
        }
		return n;
	}

}
